{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer"
        ]
      }
    ],
    "at-rule-no-deprecated": null,
    "declaration-block-no-duplicate-custom-properties": null,
    "custom-property-empty-line-before": null
  }
}
